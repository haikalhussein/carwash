<%= simple_form_for @inventory, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :quantity %>
  <%= f.input :per_price %>
  <%= f.input :total_cost %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                inventories_path, :class => 'btn' %>
  </div>
<% end %>
