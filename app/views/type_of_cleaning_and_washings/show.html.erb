<%- model_class = TypeOfCleaningAndWashing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @type_of_cleaning_and_washing.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @type_of_cleaning_and_washing.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mem_price) %>:</strong></dt>
  <dd><%= @type_of_cleaning_and_washing.mem_price %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              type_of_cleaning_and_washings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_type_of_cleaning_and_washing_path(@type_of_cleaning_and_washing), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              type_of_cleaning_and_washing_path(@type_of_cleaning_and_washing),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
