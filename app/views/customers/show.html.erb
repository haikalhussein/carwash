<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:num_plate) %>:</strong></dt>
  <dd><%= @customer.num_plate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_of_car) %>:</strong></dt>
  <dd><%= @customer.type_of_car %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_of_washing_cleaning_id) %>:</strong></dt>
  <dd><%= @customer.type_of_washing_cleaning_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_member) %>:</strong></dt>
  <dd><%= @customer.is_member %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              customers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_path(@customer), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_path(@customer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
